@model Modelo.Tabelas.Categoria

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Visualizando detalhes de uma Categoria";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        Visualizando detalhes de uma Categoria
    </div>
    @Html.Partial("~/Views/Fabricantes/_ParcialFabricante", Model.Produtos.ToList())
    <div class="panel-footer panel-info">
        @Html.ActionLink("Alterar", "Edit", new { id = Model.CategoriaId }, new { @class = "btn btn-info" })
        @Html.ActionLink("Retornar para a listagem", "Index", null, new { @class = "btn btn-info" })
    </div>
</div>
@Html.Partial("~/Views/Produtos/_PorCategoria.cshtml", Model.Produtos.ToList())
