@model Modelo.Tabelas.Categoria

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Visualizando detalhes de uma Categoria";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        Dados da Categoria a ser removida
    </div>
    @Html.Partial("~/Views/Fabricantes/_ParcialFabricante", Model.Produtos.ToList())
    <div class="panel-footer panel-info">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <input type="submit" value="Remover CATEGORIA" class="btn btn-danger" />
            @Html.ActionLink("Retornar para a listagem", "Index", null, new { @class = "btn btn-info" })
        }
    </div>
</div>
